{
  "printWidth": 100,
  "useTabs": true,
  "tabWidth": 2,
  "endOfLine": "lf",
  "singleQuote": true,
  "trailingComma": "es5",
  "bracketSpacing": true,
  "singleAttributePerLine": true,
  "plugins": ["@trivago/prettier-plugin-sort-imports"],
  "importOrder": [
      "^@nest(.*)$",
      "^@app\/(.*)$",
      "^./entities\/(.*)$",
      "<THIRD_PARTY_MODULES>",
      "^..\/(.*)$",
      "^.\/(.*)$",
      "^[./]"
  ],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true,
  "importOrderParserPlugins": [
      "typescript",
      "classProperties",
      "decorators-legacy"
  ]
}
